<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="avarda" type="host">*.core.windows.net</value>
                <value id="avarda-checkout" type="host">*.checkout-cdn.avarda.com</value>
                <value id="avarda-checkout-stage" type="host">*.stage.avarda.com</value>
                <value id="avarda-checkout-google-pay" type="host">pay.google.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="avarda-checkout" type="host">*.checkout-api.avarda.com</value>
                <value id="avarda-checkout-google-pay" type="host">google.com</value>
                <value id="avarda-checkout-google-pay-2" type="host">www.google.com</value>
                <value id="avarda-checkout-google-pay-3" type="host">pay.google.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="avarda-checkout" type="host">*.checkout-api.avarda.com</value>
                <value id="avarda-checkout-cdn" type="host">*.checkout-cdn.avarda.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="avarda-checkout" type="host">*.checkout-api.avarda.com</value>
                <value id="avarda-checkout-cdn" type="host">*.checkout-cdn.avarda.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="avarda-checkout-google-pay" type="host">pay.google.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
